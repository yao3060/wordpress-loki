# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

# 4 space indentation for PHP files
[*.php]
indent_size = 4

# 4 space indentation for WordPress theme files
[*.{html,css,js}]
indent_size = 4

# Tab indentation for WordPress config
[wp-config.php]
indent_style = tab

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2